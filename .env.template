#########################################
# GENERAL BACKEND SETTINGS
#########################################
# FastAPI app environment: "dev", "prod", "test"
APP_ENV=dev

# FastAPI host & port (used by uvicorn)
APP_HOST=0.0.0.0
APP_PORT=8000

#########################################
# DATABASE CONFIGURATION
#########################################
# --- DEVELOPMENT ONLY (SQLite) ---
# Use this for local development without Docker DB.
# Uncomment to switch to SQLite:
# DATABASE_URL=sqlite:///social-media-app.db

# --- DOCKER / LOCAL STACK (Postgres + psycopg3) ---
DATABASE_URL=postgresql+psycopg://admin:postgres@db:5432/appdb

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=appdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

#########################################
# MINIO STORAGE CONFIGURATION
#########################################
# Disable if minio should not be not be used
MINIO_ENABLED=true
# Where the MinIO server is reachable
MINIO_ENDPOINT=localhost:9000

# Login credentials for MinIO
 # >= 3 chars
MINIO_ROOT_USER=minioadmin
 # >= 8 chars
MINIO_ROOT_PASSWORD=minioadmin

# Whether the MinIO endpoint uses TLS
MINIO_SECURE=false

# Bucket where post images are stored
MINIO_BUCKET=post-images

# Host ports for docker-compose
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9002


          }
        },
        "type": "object",
        "required": [
          "file"
        ],
        "title": "Body_upload_image_uploads_images_post"
      },
      "CommentCreateDTO": {
        "properties": {
          "user": {
            "type": "string",
            "title": "User"
          },
          "text": {
            "type": "string",
            "title": "Text"
          }
        },
        "type": "object",
        "required": [
          "user",
          "text"
        ],
        "title": "CommentCreateDTO"
      },
      "CommentReadDTO": {
        "properties": {
          "id": {
            "type": "integer",
            "title": "Id"
          },
          "post_id": {

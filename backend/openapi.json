        "properties": {
          "items": {
            "items": {
              "$ref": "#/components/schemas/PostReadDTO"
            },
            "type": "array",
            "title": "Items"
          },
          "meta": {
            "$ref": "#/components/schemas/PageMetaDTO"
          }
        },
        "type": "object",
        "required": [
          "items",
          "meta"
        ],
        "title": "PostPageDTO"
      },
